<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DeviceFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="391dp"
        android:layout_height="115dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/gradientViolet"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="42dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="@string/textview_no_of_connected_devices"
            android:textColor="@color/whiteTextColor"
            android:textSize="20sp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/no_dev"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/whiteTextColor"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="283dp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="391dp"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/c5"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="42dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/switch_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical" >

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>


</RelativeLayout>